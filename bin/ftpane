#   https://github.com/junegunn/fzf/wiki/examples#tmux
#
# Defaults {{{1
#
ACTIVE_CLR_DFLT=2

# Documentation {{{1
#
VERSION='1.0'

print_help() {
    cat <<END >&2
Usage: $0 [OPTION] [QUERY]

Use fzf to switch to a different tmux pane

QUERY can be used to refine the initial search

  -n         do not colorize current pane
  -c [COLOR] color to highlight the current pane
               (256-color number, default = $TAG_CLR_DFLT)
  -h   	     display this help and exit
  -v         output version information and exit
END
}

print_version() {
    cat <<END >&2
$0 $VERSION
Copyright (C) 2023 Orion Arts
License GPLv3+: GNU GPL version 3 or later <https://gnu.org/licenses/gpl.html>.
This is free software: you are free to change and redistribute it.
There is NO WARRANTY, to the extent permitted by law.

Written by Jeremy Brubaker.
END
}

# Process options {{{1
#
ansi=--ansi
active_color=$(tput setaf "$ACTIVE_CLR_DFLT")
reset=$(tput sgr0)

while getopts ':nc:hv' c; do
    case $c in
        n) active_color= ; reset= ; ansi= ;;
        c) active_color=$(tput setaf "$OPTARG") ;;
        h) print_help; exit 0 ;;
        v) print_version; exit 0 ;;
        ?) printf "Invalid option: -%s\n" "$OPTARG" >&2; print_help; exit 1 ;;
    esac
done
shift $((OPTIND-1))

# Main {{{1
#
current=$(tmux display-message -p "#I:#P")
header="WIN:PANE,CMD,PATH"
format="#I:#P#{pane_current_command}#{pane_current_path}"

target=$(
    tmux list-panes -sF "$format" |
        sed "s@$HOME@~@" |
        column -t -s -N "$header" |
        sed -e "/^$current /!s/^/  /" \
            -e "s/^\($current .*\)/* $active_color&$reset/" |
        fzf --header-lines 1 \
            $ansi \
                --query "$1" \
            --exit-0 |
        sed 's/^\*//' |
        awk '{print $1}'
    )

[ -z "$target" ] && exit

tgtwin=$(echo "$target" | cut -d: -f1)
tgtpane=$(echo "$target" | cut -d: -f2)

if [ "$(tmux display-message -p "#I")" -eq "$tgtwin" ]; then
    tmux select-pane -t "${tgtwin}.${tgtpane}"
else
    tmux select-pane -t "${tgtwin}.${tgtpane}" &&
        tmux select-window -t "$tgtwin"
fi

